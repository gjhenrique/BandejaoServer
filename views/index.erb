<% if @meals %>
  <div class="content pure-g" id="meals">
      <% group_meals_by_date(@meals).each do |meal_date, daily_meals| %>
         <div class="pure-u-1 pure-u-md-1-2" data-meal-date="<%= meal_date %>">
             <h3><%= meal_date %></h3>
             <% daily_meals.each do |meal| %>
                 <div class="meal">
                   <% if meal.period != Period.both %>
                     <h4><%= meal.period.name %></h4>
                   <% end %>
                   <ul>
                   <% meal.dishes.each do |dish| %>
                       <li><%= dish.name %></li>
                   <% end %>
                   </ul>
                 </div>
             <% end %>
         </div>
      <% end %>
  </div>
<% end %>
